<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Main App Theme - Fixed Status Bar Handling -->
    <!-- Main App Theme - Edge-to-Edge Optimized -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <!-- Window Background -->
        <item name="android:windowBackground">@color/colorPrimary</item>
        
        <!-- Status Bar: Transparent for Edge-to-Edge -->
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        
        <!-- Navigation Bar: Transparent/Translucent -->
        <item name="android:navigationBarColor">#00000000</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o-mr1">true</item>
        
        <!-- Notch support -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
        
        <!-- Allow content to flow under system bars -->
        <item name="android:fitsSystemWindows">false</item>
        
        <!-- Optional: Ensure no translucency shadows -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#111827</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="windowSplashScreenIconBackgroundColor">#111827</item>
        <item name="windowSplashScreenAnimationDuration">0</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>
</resources>